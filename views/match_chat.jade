extend match_base
  
append content
  .row
    .col-md-12  
  if match.parsed_data          
    .row
      .col-md-6
        h3 Chat
        table.table.table-hover.table-responsive
          tr
            th Time
            th Player
            th Message
          - each message in match.parsed_data.chat
            tr
              td.format= message.time
              td= message.prefix 
              td= message.text
      script.
        $('.format').each(function(){
          $(this).text(format($(this).text()))
        })
        
        function format(input){
          return moment().startOf('day').seconds(input).format("H:mm:ss")
        }
  else
    h1 This match has no parsed data!