extend match_base

append head
  script(type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.2/moment.min.js')
  script(type='text/javascript' src='https://code.jquery.com/jquery-2.1.1.min.js')
  
append content
  .row
    .col-md-12  
  if match.parsed_data          
    .row
      .col-md-6
        h3 Chat
        table.table.table-hover.table-responsive
          each message in match.parsed_data.chat
            tr
              td.format= message.time
              td= message.prefix + ": " + message.text
      script.
        $('.format').each(function(){
          $(this).text(format($(this).text()))
        })
        
        function format(input){
          return moment().startOf('day').seconds(input).format("H:mm")
        }
  else
    h1 This match has no parsed data!