extend layout

block content
  h1 Status
  .row
    .col-md-4
      table.table
        tr
          th Players
          th Users
          th Tracked
          th FHE
          th FH
        tr
          td#players
          td#visited
          td#tracked_players
          td#eligible_full_history
          td#obtained_full_history
    .col-md-4
      table.table
        tr
          th Matches
          th Queued
          th Parsed
          th Uploaded
          th Requested
        tr
          td#matches
          td#queued_matches
          td#parsed_matches
          td#uploaded_matches
          td#requested_matches
    .col-md-4
      table.table
        tr
          th Matches Today
          th Parsed Today
          th Unavailable Today
          th Users Today
        tr
          td#matches_last_day
          td#parsed_matches_last_day
          td#unavailable_last_day
          td#visited_last_day
  .row
    .col-md-6
      h3 Last Added
      table.table#last_added
        thead
          tr
            th Match ID
            th Ended
        tbody
    .col-md-6
      h3 Last Parsed
      table.table#last_parsed
        thead
          tr
            th Match ID
            th Ended
        tbody
  .row
    include ads/leaderboard_2
block footer_assets
  script(src="/socket.io/socket.io.js")
  script.
    statusHandler();
