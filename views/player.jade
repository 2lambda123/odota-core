extend layout
block content
     .container
        .page-header
           h1(style='font-weight: 700;')=player.display_name
             small=player.account_id
           h3 Recent Matches
           h3 Teammates
           table.table
             tr
               td Name
               td Wins
               td Losses
             each player in player.teammates
               tr
                 td
                   a(href="/players/#{player.account_id}")=player.display_name
                 td=player.win
                 td=player.lose
