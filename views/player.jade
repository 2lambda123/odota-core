extend layout
block content
     .container
        .page-header
           h1(style='font-weight: 700;')=player.display_name
             small=player.account_id
           h3 Recent Matches
           h3 Teammates
           table.table
             tr
               th Name
               th Wins
               th Losses
             each teammate in player.teammates
               tr
                 td
                   a(href='/players/#{teammate.account_id}')=teammate.display_name
                 td=teammate.win
                 td=teammate.lose
