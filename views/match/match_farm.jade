extend match
    
block match_content
  .row
    .col-md-12
      +data_table({id:"distribution", summable:true, heading:"Distribution"})
        each player, i in match.players
          +data_table_header(i, match)
            tr
              th: abbr(title=tooltips.hero_id) Hero
              th: abbr(title=tooltips.farm_heroes) Heroes
              th: abbr(title=tooltips.farm_creeps) Creeps
              th: abbr(title=tooltips.farm_neutrals) Neutrals
              th: abbr(title=tooltips.farm_towers) Towers
              th: abbr(title=tooltips.farm_couriers) Couriers
              th: abbr(title=tooltips.farm_observers) Obs
              th: abbr(title=tooltips.farm_sentries) Sen
          tr(class = player.isRadiant ? "radiant" : "dire")
            - var hero = constants.heroes[player.hero_id]
            - var p = player.parsedPlayer
            +hero_td(player)
            td #{p.hero_kills || "-"}
            td #{p.lane_kills || "-"}
            td #{p.neutral_kills || "-"}
            td #{p.tower_kills || "-"}
            td #{p.courier_kills || "-"}
            td #{p.observer_kills || "-"}
            td #{p.sentry_kills || "-"}
  .row
    .col-md-12
      +data_table({id:"last_hits", summable:true, heading:"Last Hits"})
        - var bucket = 300
        each player, ind in match.players
          - var p = player.parsedPlayer
          +data_table_header(ind, match)
            tr
              th: abbr(title=tooltips.hero_id) Hero
              - for (var i = 0; i <= match.duration + bucket; i+=bucket)
                th= i/60+"'"
          tr(class = player.isRadiant ? "radiant" : "dire")
            +hero_td(player)
            - for (var i = 0; i <= match.duration + bucket; i+=bucket)
              td #{p.lh ? p.lh[i/60] : "-"}
              
  +ad("banner2")
  
  .row
    .col-md-8
      +data_table({id:"gold", summable:true, heading:"Gold"})
        each player, i in match.players
          +data_table_header(i, match)
            tr
              th: abbr(title=tooltips.hero_id) Hero
              each val, key in constants.gold_reasons
                th: abbr(title=val.tooltip)=val.name
          tr(class = player.isRadiant ? "radiant" : "dire")
            - var hero = constants.heroes[player.hero_id]
            - var p = player.parsedPlayer
            - p.gold_reasons = p.gold_reasons || {}
            +hero_td(player)
            each val, key in constants.gold_reasons
              td #{p.gold_reasons[key] || "-"}

    .col-md-4
      +data_table({id:"xp", summable:true, heading:"XP"})
        each player, i in match.players
          +data_table_header(i, match)
            tr
              th: abbr(title=tooltips.hero_id) Hero
              each val, key in constants.xp_reasons
                th=val
          tr(class = player.isRadiant ? "radiant" : "dire")
            - var hero = constants.heroes[player.hero_id]
            - var p = player.parsedPlayer
            - p.xp_reasons = p.xp_reasons || {}
            +hero_td(player)
            each val, key in constants.xp_reasons
              td #{p.xp_reasons[key] || "-"}
                
  .row
    .col-md-12
      h3 Gold Sources
      #chart-gold-breakdown
      #chart-gold-treemap

append footer_assets
  script.
    var data = !{JSON.stringify(match.incomeData)};
    c3.generate({
        bindto: "#chart-gold-breakdown",
        data: {
            columns: data.goldCols,
            type: 'bar',
            order: 'desc',
            groups: [
                    data.gold_reasons
                ]
        },
        bar: {
            width: {
                ratio: 0.9
            }
        },
        axis: {
            x: {
                type: "category",
                categories: data.cats
            }
        }
    });
  //-
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="https://rawgit.com/highslide-software/highcharts.com/master/js/themes/gray.js"></script>
    <script src="https://rawgit.com/highslide-software/highcharts.com/master/js/modules/treemap.src.js"></script>
    script.
      var data = !{JSON.stringify(match.treeMapData)};
      console.log(data);
      $('#chart-gold-treemap').highcharts({
          series:[{type:"treemap",
              allowDrillToNode: true,
              data:data,
              layoutAlgorithm: "squarified",
              dataLabels:{enabled:true},
              colorByPoint: true,
              levels: [{
                  level: 1,
                  dataLabels: {
                      enabled: true,
                      align: "left",
                      verticalAlign: "top"
                  }
              }],
              }]
      });