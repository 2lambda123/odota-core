{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "index.ts",
    "global.d.ts",
    "processors",
    "routes",
    "store",
    "svc",
    "test",
    "util"
  ]
}
